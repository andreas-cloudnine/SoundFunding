<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="~/html/style.css" media="all">
</head>

<body>

    <style>
        @@media (max-width: 680px) {
            #circle {
                top: 150px;
            }
        }

        @@media (min-width: 601px) {
            #circle {
                top: 175px;
            }
        }

        @@media (min-width: 1200px) {
            #circle {
                top: 200px;
            }
        }
    </style>


    <div class="logo">
        <img src="~/html/img/logotype.png">
        <div style="float:right; padding-right:20px;">
            <img src="~/html/img/logotype.filtr.png">
        </div>
    </div>

    <div class="container" style="margin-top:50px; background:#0072B1;">
        <div class="top" style="display:none;">

        </div>
    </div>

    <div class="container" style="display:block;">
        <div class="content topmenu">
            <div class="menu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Create cause", "Create", "Cause")</li>

                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="content clean">
            @RenderBody()
            <div class="clear"></div>
        </div>
    </div>

    <div class="footer">
        <div class="menu">
            <ul>
                <li><a href="#">Footer Link</a></li>
            </ul>
        </div>
    </div>

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <script type="text/javascript" src="scripts/bootstrap-select.js"></script>
    <script type="text/javascript">
        $('.selectpicker').selectpicker();
    </script>

</body>
</html>