@model SoundFunding.Models.Cause
@{
    ViewBag.Title = Model.Name + " - SoundFunding.com";
}

<div class="container" style="margin-top:50px; background:#004C89;">
    <div class="top" style="background: url(@Model.Picture) no-repeat">

    </div>
</div>

<div class="clear"></div>

<img src="@Model.SpotifyUserAvatarUrl" id="circle">

<div class="container">
    <div class="content clean">
        <h1>@Model.Name</h1>
        <p>@Model.Description</p>
        <p><strong>My charity</strong> @Model.ReceivingOrganization</p>

        <table width="100%">
            <tr>
                <td>Funded so far</span></td>
                <td>&nbsp;</td>
                <td>Status</td>
            </tr>
            <tr>
                <td><span>$@Model.GoalSum</span></td>
                <td>&nbsp;</td>
                <td><span>@(new Random().Next(0, 100))%</span></td>
            </tr>
            <tr>
                <td colspan=3>&nbsp;</td>
            </tr>
        </table>

        <div class="clear"></div>

        <div>
            <iframe src="https://embed.spotify.com/?uri=@Model.SpotifyPlaylistUri" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
        </div>
        
        <a href="#" class="button join">Join the cause</a>

        <div class="clear"></div>
    </div>
</div>

<div class="container" style="margin-top:100px;">
    <div class="content clean">
        @if (Model.OtherCauses != null && Model.OtherCauses.Any())
        {
            var random = new Random();
            foreach (var cause in Model.OtherCauses)
            {
                var dim = random.Next(150, 275);
                <a href="/Cause/Cause/@cause.Id">
                    <img src="@cause.Picture" width="@dim" height="@dim" class="circle">
                </a>
            }
        }

        <div class="clear"></div>
    </div>
</div>
