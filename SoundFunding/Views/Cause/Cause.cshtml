@model SoundFunding.Models.Cause
@{
    ViewBag.Title = Model.Name + " - SoundFunding.com";
}

<div class="container" style="margin-top:50px; background:#004C89; background-image-url: url(@Model.Picture)">
    <div class="top">

    </div>
</div>

<div class="clear"></div>

<img src="@Model.SpotifyUserAvatarUrl" id="circle">

<div class="container">
    <div class="content clean">
        <h1>@Model.Name</h1>
        <p>@Model.Description</p>
        <p>My charity @Model.ReceivingOrganization</p>
        <table width=100% border=0>
            <tr>
                <td>Funded so far</td>
                <td>&nbsp;</td>
                <td>Status</td>
            </tr>
            <tr>
                <td><strong>$@Model.GoalSum</strong></td>
                <td>&nbsp;</td>
                <td><strong>0%</strong></td>
            </tr>
        </table>
        <div class="clear"></div>

        <div style="border:1px solid white;">
            <iframe src="https://embed.spotify.com/?uri=@Model.SpotifyPlaylistUri" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
        </div>
        <div class="clear"></div>
    </div>
</div>
